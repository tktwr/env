all:
	./make.sh

min:
	./make_min.sh

tags:
	cd ..; make tags

#------------------------------------------------------

init:
	./make_init.sh

backup:
	./dot.sh --backup

#------------------------------------------------------

cmp:
	./dot.sh --all-files --cmp

vimdiff:
	./dot.sh --all-files --vimdiff

vimdirdiff:
	./dot.sh --all-files --vimdirdiff

#------------------------------------------------------

help:
	@echo "all        ... all"
	@echo "min        ... min"
	@echo "tags       ... tags"
	@echo "init       ... init"
	@echo "backup     ... backup"
	@echo "cmp        ... compare"
	@echo "vimdiff    ... vimdiff"
	@echo "vimdirdiff ... vimdirdiff"
	@echo "help       ... print help"

