# gitconfig

[user]
  name = username
  email = username@example.com
[core]
  autocrlf = input
  quotepath = false
  pager = less
  editor = vim
  excludesfile = ~/.gitignore_global

[pull]
  ff = only
[merge]
  tool = vimdiff
  ff = false
[mergetool]
  prompt = false
[diff]
  tool = vimdiff
[difftool]
  prompt = false

[delta]
  # minus-style = 1 reverse
  # minus-emph-style = 124 reverse
  # plus-style = 2 reverse
  # plus-emph-style = 28 reverse

[alias]
  graph     = log --graph --color=always --pretty=format:'%C(red)%h %C(green)%cd %C(blue)%an %C(yellow)%d %C(reset)%s' --date=format-local:'%Y/%m/%d %H:%M'
  graph-all = log --graph --color=always --pretty=format:'%C(red)%h %C(green)%cd %C(blue)%an %C(yellow)%d %C(reset)%s' --date=format-local:'%Y/%m/%d %H:%M' --all
  co = checkout
  dd = difftool -d

