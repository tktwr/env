{
  // --------------------------------------------------
  // proxy
  // --------------------------------------------------
  "http.proxyStrictSSL": false,

  // --------------------------------------------------
  // floating window
  // --------------------------------------------------
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true
  },

  // --------------------------------------------------
  // snippets
  // --------------------------------------------------
  "snippets.ultisnips.directories": [
    "${env:MY_COMMON_SETTING}/UltiSnips",
    "${env:MY_VIM}/UltiSnips"
  ],
  "snippets.userSnippetsDirectory": "${env:MY_COMMON_SETTING}/UltiSnips",

  // --------------------------------------------------
  // python
  // --------------------------------------------------
  "python.venvPath": "${env:MY_PYTHON_VENV_DIR}",
  "python.pythonPath": "${env:MY_PYTHON_VENV_DIR}/default/bin/python",
  "python.linting.pylintPath": "${env:MY_PYTHON_VENV_DIR}/default/bin/pylint",
  "python.linting.flake8Path": "${env:MY_PYTHON_VENV_DIR}/default/bin/flake8",
  "python.analysis.stubPath": "${env:MY_GITHUB}/python-type-stubs",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.flake8Args": ["--ignore=E203,E221,E501,F541"],

  // error numbers:
  //   E203: whitespace before ':'
  //   E203: whitespace before ','
  //   E221: multiple spaces before operator
  //   E501: line too long
  //   F541: f-string is missing placeholders

  // --------------------------------------------------
  // clangd
  // --------------------------------------------------
  "clangd.fallbackFlags": ["-xc++", "-std=c++17", "-I."],
  "clangd.enabled": true,

  // --------------------------------------------------
  // session
  // --------------------------------------------------
  "session.saveOnVimLeave": false
}
// vim: ft=jsonc
