{
  // snippets
  "snippets.ultisnips.directories": [
    "${env:MY_COMMON_SETTING}/UltiSnips",
    "${env:MY_VIM}/UltiSnips"
  ],
  "snippets.userSnippetsDirectory": "${env:MY_COMMON_SETTING}/UltiSnips",

  // python
  "python.venvPath": "${env:MY_PYTHON_VENV_DIR}",
  "python.pythonPath": "${env:MY_PYTHON_VENV_DIR}/torch/bin/python",
  "python.linting.pylintPath": "${env:MY_PYTHON_VENV_DIR}/torch/bin/pylint",
  "python.linting.flake8Path": "${env:MY_PYTHON_VENV_DIR}/torch/bin/flake8",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E203,E501,F541"],
  "python.linting.enabled": true
}
