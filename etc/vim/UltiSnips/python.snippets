#======================================================
# snippets for python
#======================================================

#------------------------------------------------------
# import
#------------------------------------------------------

snippet imp "import"
import ${0:module}
endsnippet

snippet imp.datetime.datetime "import datetime.datetime"
from datetime import datetime as dt
endsnippet

snippet imp.numpy "import numpy"
import numpy as np
endsnippet

snippet imp.PIL.Image "import PIL.Image"
from PIL import Image
endsnippet

snippet imp.matplotlib.pyplot "import matplotlib.pyplot"
import matplotlib.pyplot as plt
endsnippet

#------------------------------------------------------
# main
#------------------------------------------------------

snippet main "main"
import sys


def main(argv):
    print(argv)


if __name__ == "__main__":
    main(sys.argv)
endsnippet

#------------------------------------------------------
# control
#------------------------------------------------------

snippet if "if"
if ${1:True}:
elif ${2:True}:
else:
endsnippet

snippet elif "elif"
elif ${1:True}:
endsnippet

snippet el "else"
else:
endsnippet

snippet for "for"
for ${1:i} in ${2:list}:
    ${0:pass}
endsnippet

snippet wh "while"
while ${1:True}:
    ${0:pass}
endsnippet

#------------------------------------------------------
# function
#------------------------------------------------------

snippet func "function"
def ${1:func_name}(${2:arg1}):
    ${0:pass}


endsnippet

#------------------------------------------------------
# class
#------------------------------------------------------

snippet cl "class"
class MyClass():
    def __init__(self):
        pass

    def __del__(self):
        pass

    def f(self):
        pass


endsnippet

snippet subcl "sub class"
class MySubClass(MyClass):
    def g(self):
        pass


endsnippet

#------------------------------------------------------
# util
#------------------------------------------------------

snippet print "print"
print(f'${1:val}: {$1}')
endsnippet

snippet print_stderr "print stderr"
print(f'${1:val}: {$1}', file=sys.stderr)
endsnippet

snippet range "range"
range(${1:0}, ${2:5}, ${3:1})
endsnippet

snippet int-list "int list"
list(int(i) for i in range(${1:0}, ${2:5}, ${3:1}))
endsnippet

