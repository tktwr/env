#======================================================
# io
#======================================================

snippet f_read_text_file "read a text file"
void f_read_text_file(const std::string& fname, std::vector<std::string>& texts) {
    std::ifstream ifs(fname.c_str());
    std::string line;
    while (std::getline(ifs, line)) {
        texts.push_back(line);
    }
}
endsnippet

snippet f_write_text_file "write a text file"
void f_write_text_file(const std::string& fname, const std::vector<std::string>& texts) {
    std::ofstream ofs(fname.c_str());
    for (auto line : texts) {
        ofs << line << std::endl;
    }
}
endsnippet

snippet f_read_binary_file "read a binary file"
void f_read_binary_file(const std::string& fname, char* data, size_t size) {
    std::ifstream ifs(fname.c_str(), std::ios::binary);
    ifs.read(data, size);
}
endsnippet

snippet f_write_binary_file "write a binary file"
void f_write_binary_file(const std::string& fname, const char* data, size_t size) {
    std::ofstream ofs(fname.c_str(), std::ios::binary);
    ofs.write(data, size);
}
endsnippet

