#!/bin/bash

#PATH="/mingw64/bin:/usr/bin:$PATH"

venv=""
#mypython-venv-exist vim
#if [ $? -eq 0 ]; then
#  mypython-venv-activate vim
#  venv="vim"
#fi

debug=0
if [ $debug -eq 1 ]; then
  echo $PATH | format-path.sh > ~/vim.log

  echo >> ~/vim.log
  echo "[which]" >> ~/vim.log
  which python >> ~/vim.log
  which python3 >> ~/vim.log
  which pip >> ~/vim.log
  which pip3 >> ~/vim.log
  which pyls >> ~/vim.log
  which clangd >> ~/vim.log
  echo "venv: $venv" >> ~/vim.log
fi

exec /usr/bin/vim "$@"

