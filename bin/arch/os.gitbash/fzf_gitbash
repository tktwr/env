#!/usr/bin/env bash

TMPDIR=~/.mycache/tmp
mkdir -p $TMPDIR

set -eo pipefail

tmpdir=$(mktemp -dp "${TMPDIR}" "fzf.XXXXX")
trap "rm -rf -- '${tmpdir}'" EXIT

args=
[[ $# -ge 1 ]] && args=$(printf ' %q' "$@")

if [[ -t 0 ]]; then
  winpty </dev/tty >/dev/tty -- bash -c \
    "command $MY_VIM_PLUGGED_DIR/fzf/bin/fzf.exe ${args} >'${tmpdir}'/output"
  cat "${tmpdir}"/output
else
  cat - >"${tmpdir}"/input
  winpty </dev/tty >/dev/tty -- bash -c \
    "command $MY_VIM_PLUGGED_DIR/fzf/bin/fzf.exe ${args} <'${tmpdir}'/input >'${tmpdir}'/output"
  cat "${tmpdir}"/output
fi
