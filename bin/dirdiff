#!/bin/sh

LANG=C

src=${1%/}
dst=${2%/}

tmpfile1=$(mktemp)
tmpfile2=$(mktemp)

echo "dir: $src" > $tmpfile1
find $src -type f -exec md5sum -b {} \; | sed "s|$src/||" >> $tmpfile1

echo "dir: $dst" > $tmpfile2
find $dst -type f -exec md5sum -b {} \; | sed "s|$dst/||" >> $tmpfile2

vimdiff $tmpfile1 $tmpfile2

rm $tmpfile1 $tmpfile2

